@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<Umbraco.Cms.Core.Models.Blocks.BlockGridItem<MainBanner>>
@using ContentModels = Umbraco.Cms.Web.Common.PublishedModels;
@{
    var _plusImage = Model.Content.Value<Umbraco.Cms.Core.Models.MediaWithCrops>("iconImage");
    var _BannerImage = Model.Content.Value<Umbraco.Cms.Core.Models.MediaWithCrops>("bannerImage");
    var links = Model.Content.Link;
}

<!-- ---------Hero Banner Start --------->
    <section class="banner-section bkg-gray">
      <div class="container">
        <div class="row align-items-center">
          <div class="col-lg-6">
            <div class="banner-content" data-aos="fade-up">
              <h1>
                  @Html.Raw(Model.Content.Title)
              </h1>
                @if (_plusImage != null)
                {
                        <img src="@_plusImage.MediaUrl()" alt="" />
                }
              <p>@Model.Content.Description</p>
              <button class="border-0">
                @foreach (var link in links)
                {
                    <a href="@link.Url" class="btn">@link.Name</a>
                }
              </button>
            </div>
            <div class="search-box rounded-3 bg-white mb-5" data-aos="fade-up">
              <div class="row">
                <div class="col-md-6">
                  <div class="search-input search-line">
                    <i class="fa pt-2 fa-solid fa-magnifying-glass"></i>
                    <div class="mb-0 w-100">
                      <input type="text" class="form-control" placeholder="Search doctors clinics hospitals" />
                    </div>
                  </div>
                </div>

                <div class="col-md-6">
                  <div class="search-input">
                    <i class="fa pt-2 fa-thin fa-calendar"></i>
                    <div class="mb-0">
                      <input type="text" class="form-control" id="datetimepicker" placeholder="Date" />
                    </div>
                    <div class="form-search">
                      <a href="#" class="btn btn-primary rounded-2 py-2 px-4 mx-3 fs-6">Search</a>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
          <div class="col-lg-6">
            <div class="banner-img" data-aos="fade-up">
                    @if (_BannerImage != null)
                    {
                        <img src="@_BannerImage.MediaUrl()" alt="" />
                    }
            </div>
          </div>
        </div>
      </div>
    </section>
    <!-- Hero Banner Ends -->